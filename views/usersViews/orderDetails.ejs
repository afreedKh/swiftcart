    <script>
        function generateRandomInvoiceNumber() {
            return 'INV-' + Math.floor(Math.random() * 1000000); // Generates a number between 0 and 999999
        }
    
        document.getElementById('downloadInvoice').addEventListener('click', function() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();
    
    // Set font
    doc.setFont("helvetica", "normal");
    
    // Add company logo or name
    doc.setFontSize(20);
    doc.text("Swift Cart", 105, 20, null, null, "center");
    
    const randomInvoiceNumber = generateRandomInvoiceNumber();

    // Add invoice title and number
    doc.setFontSize(16);
    doc.text("Invoice", 20, 30);
    doc.setFontSize(12);
    doc.text(`Invoice No: ${randomInvoiceNumber}`, 20, 40);
    
    // Add order details
    doc.text(`Order Number: <%= order.orderNumber %>`, 20, 50);
    doc.text(`Order Date: <%= order.createdAt.toDateString() %>`, 20, 60);
    doc.text(`Estimated Delivery: <%= order.estimatedDeliveryDate.toDateString() %>`, 20, 70);
    
    // Add customer details
    doc.text("Bill To:", 20, 90);
    doc.text(`<%= order.shippingAddress.name %>`, 20, 100);
    doc.text(`<%= order.shippingAddress.locality %>`, 20, 110);
    doc.text(`<%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>`, 20, 120);
    doc.text(`Pincode: <%= order.shippingAddress.pincode %>`, 20, 130);
    doc.text(`Phone: <%= order.shippingAddress.phone %>`, 20, 140);
    
    // Add item details
    doc.text("Item", 20, 160);
    doc.text("Quantity", 100, 160);
    doc.text("Price", 140, 160);
    doc.text("Total", 180, 160);
    
    let yPos = 170;
    <% order.itemsOrdered.forEach((item, index) => { %>
        // Break down long item names to fit within the specified width (70 units here)
        const itemName = doc.splitTextToSize(`<%= item.productName %>`, 70);
        doc.text(itemName, 20, yPos); // Wrap long item names

        doc.text(`<%= item.quantity %>`, 100, yPos); // Align quantity column
        doc.text(`Rs.<%= item.price %>`, 140, yPos); // Align price column
        doc.text(`Rs.<%= item.quantity * item.price %>`, 180, yPos); // Align total price column
        yPos += (itemName.length * 10); // Adjust yPos for multi-line text
    <% }); %>

    yPos += 10;
    doc.text(`MRP: Rs.<%= order.actualMrp %>`, 150, yPos);
    yPos += 10;
    
    // Add subtotal, discount, and total
    let totalDiscount = (Number(<%= order.offerDiscount %>) || 0) + (Number(<%= order.couponDiscount %>) || 0);
    if (!isNaN(totalDiscount) && totalDiscount > 0) {
        doc.text(`Discount: Rs.${totalDiscount.toFixed(2)}`, 150, yPos);
        yPos += 10;
    }
    
    doc.text(`Subtotal: Rs.<%= order.subtotal %>`, 150, yPos);
    yPos += 10;

    doc.text(`Total Amount: Rs.<%= order.totalAmount %>`, 150, yPos);
    
    // Add payment method
    yPos += 20;
    doc.text(`Payment Method: <%= order.paymentMethod %>`, 20, yPos);
    
    // Add footer
    doc.setFontSize(10);
    doc.text("Thank you for your business!", 105, 280, null, null, "center");
    
    // Save the PDF
    doc.save(`Invoice-<%= order.orderNumber %>.pdf`);
});

    </script>
            

