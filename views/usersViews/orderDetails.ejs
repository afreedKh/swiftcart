                        <!-- <div class="tab-pane fade" id="orders"> -->
                            <div class="order-details container mt-5">
                                <h1 class="mb-4">Order Details</h1>
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Order Number:</strong> <%= order.orderNumber %></p>
                                                <p><strong>Total Amount:</strong> Rs.<%= order.totalAmount.toFixed(2) %></p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %></p>
                                                <p><strong>Estimated Delivery:</strong> <%= new Date(order.estimatedDeliveryDate).toLocaleDateString() %></p>
                                                <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h2 class="mb-3">Shipping Address</h2>
                                        <p><strong>Name:</strong> <%= order.shippingAddress.name %></p>
                                        <p><strong>Address:</strong> <%= order.shippingAddress.locality %>,<br> <%= order.shippingAddress.address %>, <br><%= order.shippingAddress.city %>,<br> <%= order.shippingAddress.state %>,<br><%= order.shippingAddress.pincode %></p>
                                        <p><strong>Country:</strong> India</p>
                                    </div>
                                </div>
                            
                                <h2 class="mb-3">Items Ordered</h2>
                                <div class="table-responsive">
                                    <table>
                                      <thead>
                                        <tr>
                                          <th>Product</th>
                                          <th>Image</th>
                                          <th>Color</th>
                                          <th>Quantity</th>
                                          <th>Price</th>
                                          <th>Subtotal</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% order.itemsOrdered.forEach(item => { %>
                                          <tr>
                                            <td data-label="Product"><%= item.productId ? item.productId.name : 'Unknown Product' %></td>
                                            <td data-label="Image">
                                              <% if (item.varient && item.varient.images && item.varient.images.length > 0) { %>
                                                <img src="<%= item.varient.images[0].url %>" alt="<%= item.varient.images[0].altText %>" class="img-thumbnail">
                                              <% } else { %>
                                                <span>No variant image</span>
                                              <% } %>
                                            </td>
                                            <td data-label="Color">
                                              <% if (item.varient && item.varient.color) { %>
                                                <%= item.varient.color.color %>
                                              <% } else { %>
                                                <span>No color specified</span>
                                              <% } %>
                                            </td>
                                            <td data-label="Quantity"><%= item.quantity %></td>
                                            <td data-label="Price">Rs.<%= item.price.toFixed(2) %></td>
                                            <td data-label="Subtotal">Rs.<%= (item.price * item.quantity).toFixed(2) %></td>
                                          </tr>
                                        <% }); %>
                                      </tbody>
                                      <tfoot>
                                        <tr>
                                          <td colspan="5" data-label="MRP">MRP:</td>
                                          <td>Rs.<%= order.actualMrp.toFixed(2)%></td>
                                        </tr>
                                  
                                        <% if (order.offerDiscount) { %>
                                          <tr>
                                            <td colspan="5" data-label="Offer Discount">Offer Discount:</td>
                                            <td class="discount">-Rs.<%= order.offerDiscount.toFixed(2) %></td>
                                          </tr>
                                        <% } %>
                                  
                                        <tr>
                                          <td colspan="5" data-label="Subtotal">Subtotal:</td>
                                          <td>Rs.<%= order.subtotal.toFixed(2)%></td>
                                        </tr>
                                  
                                        <% if(order.couponDiscount) { %>
                                          <tr>
                                            <td colspan="5" data-label="Coupon Discount">Coupon Applied (Discount):</td>
                                            <td class="discount">-Rs.<%= order.couponDiscount.toFixed(2)%></td>
                                          </tr>
                                        <% } %>
                                  
                                        <tr>
                                          <td colspan="5" data-label="Shipping Charge">Shipping Charge:</td>
                                          <td>
                                            <% if(order.totalAmount > 1000) { %>
                                              Free Delivery
                                            <% } else { %>
                                              Rs.100.00
                                            <% } %>
                                          </td>
                                        </tr>
                                  
                                        <tr>
                                          <td colspan="5" data-label="Total"><strong>Total:</strong></td>
                                          <td><strong>Rs.<%= order.totalAmount.toFixed(2) %></strong></td>
                                        </tr>
                                      </tfoot>
                                    </table>
                                  </div>
                            
                        <!-- </div> -->
                        
                        <div class="mt-4">
                            <h4>Order Status: 
                                <span class="badge 
                                    <%= order.status === 'Processing' ? 'bg-warning text-dark' : 
                                        order.status === 'Shipped' ? 'bg-info text-dark' : 
                                        order.status === 'Delivered' ? 'bg-success' : 
                                        order.status === 'Cancelled' ? 'bg-danger' : 
                                        'bg-secondary' %>">
                                    <%= order.status %>
                                </span>
                            </h4>
                        </div>

                        <%if(order.status==='Delivered'){%>
                            <button id="downloadInvoice" class="btn btn-md btn-black-default-hover" type="button">Download Invoice</button>
                       <% }%>

                       




                        
                        
                        <div class="mt-4">
