    <form id="cartForm" action="/checkout" method="POST">
    <div class="cart-section">
        <!-- Start Cart Table -->
        <div class="cart-table-wrapper" data-aos="fade-up" data-aos-delay="0">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table_desc">
                            <div class="table_page table-responsive">
                                <table>
                                    <!-- Start Cart Table Head -->
                                    <thead>
                                        <tr>
                                            <th class="product_remove">Delete</th>
                                            <th class="product_thumb">Image</th>
                                            <th class="product_name">Product</th>
                                            <th class="product-price">Price</th>
                                            <th class="product_quantity">Quantity</th>
                                            <th class="product_total">Total</th>
                                        </tr>
                                    </thead> <!-- End Cart Table Head -->
                                    
                                    <tbody>
                                        <% if (cart && cart.items.length > 0) { %>
                                            <% cart.items.forEach(item => { %>
                                                <% 
                                                    const variant = item.productId.varients.find(v => v._id.toString() === item.varientId.toString());
                                                    const stock = variant ? variant.stock : 0; 
                                                    console.log("Rendering item:", item.productId.name);
                                                    console.log("Item price:", item.price);
                                                    console.log("Product price:", item.productId.price);
                                                    console.log("Offer:", item.productId.offer);
                                                %>
                                                <tr>
                                                    <td class="product_remove" >
                                                        <a href="/cartDelete/<%= item._id %>" data-product-id="<%= item.productId._id %>" data-variant-id="<%= item.varientId %>" class="remove-item">
                                                            <i class="fa fa-trash-o"></i>
                                                        </a>
                                                    </td>
                                                    <td class="product_thumb"  style="margin-left: 103px;">
                                                        <% if (variant && variant.images && variant.images.length > 0) { %>
                                                            <a href="product-details-default.html">
                                                                <img src="<%= variant.images[0].url %>" alt="<%= variant.images[0].altText || 'Product Image' %>">
                                                            </a>
                                                        <% } else { %>
                                                            <img src="/path/to/default-image.jpg" alt="No image available">
                                                        <% } %>
                                                    </td>
                                                    <td class="product_name" >
                                                        <a href="product-details-default.html"><%= item.productId.name %></a>
                                                    </td>
                                                    <td class="product-price "data-label="Price" data-price="<%= item.price.toFixed(2) %>">
                                                        Rs. <%= item.price.toFixed(2) %>
                                                      </td>
                                                      <input type="hidden" name="items[<%= item._id %>][price]" value="<%= item.price.toFixed(2) %>">
                                                    <td class="product_quantity" data-label="Quantity">
                                                        
                                                        <div class="product-variable-quantity">
                                                            <button class="quantity-btn" type="button" onclick="decreaseQuantity('<%= item._id %>')">-</button>
                                                            <input id="quantityInput-<%= item._id %>" data-item-id="<%= item._id %>" class="quantity-input" min="1" max="5" data-stock="<%= stock %>" value="<%= item.quantity %>" type="number">
                                                            <button class="quantity-btn" type="button" onclick="increaseQuantity('<%= item._id %>')">+</button>
                                                        </div>
                                                        <p id="quantityError-<%= item._id %>" class="quantity-error" style="color: red;"></p>
                                                    </td>
                                                    <td class="product_total" data-label="Total" id="totalPrice-<%= item._id %>">
                                                        Rs. <%= (item.quantity * item.price).toFixed(2) %>
                                                      </td>
                                                </tr>
                                                <input type="hidden" name="items[<%= item._id %>][productId]" value="<%= item.productId._id %>">
                                                <input type="hidden" name="items[<%= item._id %>][varientId]" value="<%= item.varientId %>">
                                                <input type="hidden" name="items[<%= item._id %>][quantity]" id="hiddenQuantity-<%= item._id %>" value="<%= item.quantity %>">
                                                <input type="hidden" name="items[<%= item._id %>][price]" value="<%= (item.productId.price * (1 - 30 / 100)).toFixed(2) %>">
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6">Your cart is empty.</td>
                                            </tr>
                                        <% } %>
