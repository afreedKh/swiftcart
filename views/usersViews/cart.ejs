    <script>



function updateSubtotal() {
    let subtotal = 0;

    document.querySelectorAll('.product_total').forEach(item => {
        const total = parseFloat(item.textContent.replace('Rs. ', ''));
        if (!isNaN(total)) {
            subtotal += total;
        } else {
            console.error('Invalid total value:', item.textContent);
        }
    });


    document.getElementById('cartSubtotal').textContent = `Rs. ${subtotal.toFixed(2)}`;
    
}


function updateItemTotal(itemId, quantity, price) {
    const totalElement = document.getElementById(`totalPrice-${itemId}`);
    const newTotal = (quantity * price).toFixed(2);
    totalElement.textContent = `Rs. ${newTotal}`;

    // Update the hidden input value
    const hiddenQuantityInput = document.getElementById(`hiddenQuantity-${itemId}`);
    hiddenQuantityInput.value = quantity;

    // Update the subtotal for the cart
    updateSubtotal();
}

function decreaseQuantity(itemId) {
    const input = document.getElementById('quantityInput-' + itemId);
    const value = parseInt(input.value);
    const priceElement = input.closest('tr').querySelector('.product-price');
    const price = parseFloat(priceElement.getAttribute('data-price'));
    const stock = parseInt(input.getAttribute('data-stock'));
    const maxQuantity = parseInt(input.getAttribute('max'));
    const errorElement = document.getElementById(`quantityError-${itemId}`);

    if (value > 1) {
        input.value = value - 1;
        errorElement.textContent = ''; // Clear error message
        updateItemTotal(itemId, input.value, price);
    }
}

function increaseQuantity(itemId) {
    const input = document.getElementById('quantityInput-' + itemId);
    const value = parseInt(input.value);
    const priceElement = input.closest('tr').querySelector('.product-price');
    const price = parseFloat(priceElement.getAttribute('data-price'));
    const stock = parseInt(input.getAttribute('data-stock'));
    const maxQuantity = parseInt(input.getAttribute('max'));
    const errorElement = document.getElementById(`quantityError-${itemId}`);

    if (value < maxQuantity && value < stock) {
        input.value = value + 1;
        errorElement.textContent = ''; // Clear error message
        updateItemTotal(itemId, input.value, price);
    } else if (value >= maxQuantity) {
        errorElement.textContent = `You can only add a maximum of ${maxQuantity} units of this item.`;
    } else if (value >= stock) {
        errorElement.textContent = `Only ${stock} units are available in stock.`;
    }
}

// Event listener for direct input changes
document.querySelectorAll('.quantity-input').forEach(input => {
    input.addEventListener('change', function () {
        const quantity = parseInt(this.value);
        const maxQuantity = parseInt(this.getAttribute('max'));
        const stock = parseInt(this.getAttribute('data-stock'));
        const itemId = this.getAttribute('data-item-id');
        const priceElement = this.closest('tr').querySelector('.product-price');
        const price = parseFloat(priceElement.getAttribute('data-price'));
        const errorElement = document.getElementById(`quantityError-${itemId}`);

        if (quantity > maxQuantity) {
            this.value = maxQuantity;
            errorElement.textContent = `You can only add a maximum of ${maxQuantity} units of this item.`;
            return;
        } else if (quantity > stock) {
            this.value = stock;
            errorElement.textContent = `Only ${stock} units are available in stock.`;
            return;
        } else {
            errorElement.textContent = ''; // Clear error message
        }

        // Update the total price for this item
        updateItemTotal(itemId, this.value, price);
    });
});

// Update the subtotal initially
updateSubtotal();


    


</script>




