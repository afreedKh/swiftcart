    <script>

function block(id){
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, block it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, make the AJAX request to delete
                    $.ajax({
                        type: "GET",
                        url: `/admin/blockCategories/${id}`,
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: "success",
                                    title: "Blocked!",
                                    text: "Category has been blocked.",
                                    showConfirmButton: false,
                                    timer: 1500,
                                }).then(() => {
                                    // Reload the page or remove the deleted banner from the DOM
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                    text: response.message,
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: "error",
                                title: "Error",
                                text: "An error occurred while User blocking"
                            });
                        }
                    });
                }
            })
        }







        function unblock(id){
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Unblock it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, make the AJAX request to delete
                    $.ajax({
                        type: "GET",
                        url: `/admin/unblockCategories/${id}`,
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: "success",
                                    title: "Unblocked!",
                                    text: "Category has been unblock.",
                                    showConfirmButton: false,
                                    timer: 1500,
                                }).then(() => {
                                    // Reload the page or remove the deleted banner from the DOM
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                    text: response.message,
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: "error",
                                title: "Error",
                                text: "An error occurred while User blocking"
                            });
                        }
                    });
                }
            })
        }
       



        
       
    </script>


