    <div class="content">
        <div class="header">
            <h1>User Management Page</h1>
        </div>

        <div class="table-responsive mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>SL NO.</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example User Row -->
                    <!-- Use server-side rendering to dynamically generate rows -->
                    <% users.forEach(function(user, index) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.isBlocked ? 'Blocked' : 'Active' %></td>
                        <td>
                            <% if (user.isBlocked) { %>
                              

                                    <button onclick="unblock('<%=user._id %>')" type="submit" class="btn btn-sm btn-success">Unblock</button>
                               
                            <% } else { %>
                                
                                    <button onclick="block('<%= user._id %>')" type="submit" class="btn btn-sm btn-danger">Block</button>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
